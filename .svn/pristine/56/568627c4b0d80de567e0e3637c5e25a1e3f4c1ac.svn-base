<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="322dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:background="@color/dialog_title_background"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="@string/wcdmasmsthreshold"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_21" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1d2e3c"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/tv_target_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smsthreshold"
            android:textColor="#52a4d9"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_smsthreshold"
            android:layout_width="fill_parent"
            android:layout_height="36dip"
            android:background="@drawable/bg_edittext"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize_15"
			android:maxLength="4"
             />

        <TextView
            android:id="@+id/tv_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="@string/phonethreshold"
            android:textColor="#52a4d9"
            android:textSize="@dimen/textsize_15" />

        <EditText
            android:id="@+id/et_phonethreshold"
            android:layout_width="fill_parent"
            android:layout_height="36dip"
            android:background="@drawable/bg_edittext"
            android:inputType="number"
            android:maxLength="4"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize_15" />
