<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="50dp" >

         <CheckBox
             android:id="@+id/cb_device_self_checking"
             android:layout_width="65dp"
             android:layout_height="30dp"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="10dp"
             android:background="@drawable/checkbox_selector"
             android:checked="true"
             android:button="@null" />
		 <View 
			 style="@style/line_gray_night"
			 android:layout_alignParentBottom="true" />

		 <TextView
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_alignBaseline="@id/cb_device_self_checking"
		     android:layout_alignBottom="@id/cb_device_self_checking"
		     android:layout_alignParentLeft="true"
		     android:layout_marginLeft="54dp"
		     android:gravity="center_horizontal"
		     android:maxWidth="230dp"
		     android:text="@string/device_self_checking"
		     android:textSize="19sp" />

     </RelativeLayout>

</LinearLayout>
