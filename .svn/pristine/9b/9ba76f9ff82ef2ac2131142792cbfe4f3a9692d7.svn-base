<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="322dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
 
    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:background="@color/dialog_title_background"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="@string/visual_patterns"
            android:textColor="@color/white"
            android:textSize="21dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/white" />

    <RadioGroup
        android:id="@+id/rg_visual_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1D2E3C"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/rb_day_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/radio_style"
            android:drawablePadding="8dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/day_mode"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_17" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/white" />

        <RadioButton
            android:id="@+id/rb_night_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/radio_style"
            android:drawablePadding="8dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/night_mode"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_17" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9c9a9c"
        android:orientation="horizontal"
        android:padding="3dp" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="#5a676f"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ok"
            android:textColor="#5a676f"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>