<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="322dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:background="#45637b"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" >

        <TextView
            android:id="@+id/tv_network_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="注册对话框"
            android:textColor="#ffffff"
            android:textSize="21sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1d2e3c"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话号码:"
            android:textColor="@color/light_blue" />

          <EditText
                    android:id="@+id/et_reg_number"
                    android:layout_width="fill_parent"
                    android:layout_height="36dip"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_edittext"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:hint="请输入电话号码"
                    android:textSize="15sp" />

          <TextView
              android:id="@+id/textView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="用户单位：" 
            android:textColor="@color/light_blue" />

          <EditText
                    android:id="@+id/et_reg_company"
                    android:layout_width="fill_parent"
                    android:layout_height="36dip"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_edittext"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:hint="请输入用户单位"
                    android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9c9a9c"
        android:orientation="horizontal"
        android:padding="3dp" >

        <Button
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="注册"
            android:textColor="#5a676f"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:text="@string/cancel"
            android:textColor="#5a676f"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>