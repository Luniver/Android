<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="RSA调测界面"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="22sp"/>
    
    <Button 
            android:id="@+id/rsa_public_passwd_btn"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送公钥"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    
        <Button 
            android:id="@+id/rsa_private_passwd_btn"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送私钥"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="授权码:"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <EditText 
            android:id="@+id/rsa_authorization_code_edt"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        
        <Button 
            android:id="@+id/rsa_authorization_code_btn"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="发送"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    
    </LinearLayout>
    
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="设备标识内容:"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <EditText 
            android:id="@+id/rsa_identification_edt"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        
        <Button 
            android:id="@+id/rsa_identification_btn"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="发送"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="密码内容:"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <EditText 
            android:id="@+id/rsa_passwd_edt"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:maxLength="16"
            android:textSize="18sp"/>
        
        <Button 
            android:id="@+id/rsa_passwd_btn"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="发送"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        
    </LinearLayout>
    

</LinearLayout>
