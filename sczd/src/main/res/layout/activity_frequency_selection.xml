<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="#03214e" >

        <LinearLayout
            android:id="@+id/titlelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/tv_search_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_search_unit"
            android:paddingRight="3dp"
            android:text="0"
            android:textColor="#03fc36"
            android:visibility="invisible"
            android:textSize="@dimen/textsize_19" />

        <TextView
            android:id="@+id/tv_search_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:text="@string/tv_search_unit"
            android:textColor="#ffffff"
            android:visibility="invisible"
            android:textSize="@dimen/textsize_19" />
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout 
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edt_input"
                android:orientation="horizontal">
                <TextView 
			        android:id="@+id/tv_freq_id"
			        android:layout_width="0dp"
			        android:layout_height="match_parent"
			        android:layout_weight="1"
			        android:text="@string/tv_freq_id"
			        android:gravity="center"
			        android:textColor="@color/white"/>
			    <View 
			        android:layout_width="0.5dp"
			        android:layout_height="match_parent"
			        android:layout_gravity="center_vertical"
			        android:background="@color/white"/>
			    <TextView 
			        android:id="@+id/tv_freq"
			        android:layout_width="0dp"
			        android:layout_height="match_parent"
			        android:layout_weight="1"
			        android:text="@string/tv_freq"
			        android:gravity="center"
			        android:textColor="@color/white"/>
			    <View 
			        android:layout_width="0.5dp"
			        android:layout_height="match_parent"
			        android:layout_gravity="center_vertical"
			        android:background="@color/white"/>
			    <TextView 
			        android:id="@+id/tv_freq_en"
			        android:layout_width="0dp"
			        android:layout_height="match_parent"
			        android:layout_weight="1"
			        android:text="@string/tv_freq_energy"
			        android:gravity="center"			        
			        android:textColor="@color/white"/>
            </LinearLayout>
            
	        <ListView 
	            android:id="@+id/lv_reported_frequency_point"
	            android:layout_marginTop="5dp"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:layout_height="match_parent"
	            android:layout_width="match_parent"/>
       	</LinearLayout>
        
        <LinearLayout 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button 
                android:id="@+id/btn_cancel_all"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/tv_cancel_freq_all"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_15"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edt_input"/>
            
            <TextView 
                android:id="@+id/tv_freq_one"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/edt_input"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_15"
                android:drawableRight="@drawable/ox"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            
            <TextView 
                android:id="@+id/tv_freq_two"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/edt_input"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:drawableRight="@drawable/ox"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/textsize_15"/>
           	<TextView 
                android:id="@+id/tv_freq_three"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/edt_input"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:drawableRight="@drawable/ox"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/textsize_15"/>
            <TextView 
                android:id="@+id/tv_freq_four"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/edt_input"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:drawableRight="@drawable/ox"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/textsize_15"/>
           	<TextView 
                android:id="@+id/tv_freq_five"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/edt_input"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:drawableRight="@drawable/ox"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/textsize_15"/>
            <TextView 
                android:id="@+id/tv_freq_six"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/edt_input"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:drawableRight="@drawable/ox"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/textsize_15"/>
            <TextView 
                android:id="@+id/tv_freq_seven"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/edt_input"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:drawableRight="@drawable/ox"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/textsize_15"/>
           	<TextView 
                android:id="@+id/tv_freq_eight"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/edt_input"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:drawableRight="@drawable/ox"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/textsize_15"/>
        </LinearLayout>
    </LinearLayout>
    <Button 
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/btn_next_style"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_19"
        android:text="@string/ok"/>

</LinearLayout>
