<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="322dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:background="@color/dialog_title_background"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="@string/check_new_version"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_21" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1d2e3c"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/tv_target_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_version_info"
            android:textColor="#52a4d9"
            android:textSize="@dimen/textsize_15" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/bg_edittext"
            android:inputType="textMultiLine" 
            android:gravity="top"
            android:enabled="false"
            android:padding="5dp"
            android:minLines="6"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/textsize_15" />

        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9c9a9c"
        android:orientation="horizontal"
        android:padding="3dp" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:onClick="cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_15" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/check"
            android:onClick="checkVersion"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_15" />
    </LinearLayout>

</LinearLayout>