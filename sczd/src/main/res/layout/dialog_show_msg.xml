<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
       style="@style/dialog_title"
       android:text="@string/dialog_show_msg" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/popup_body"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">
		<ScrollView 
		     android:id="@+id/sv_dialog_show_msg"
		     android:layout_width="match_parent"
		     android:layout_height="0dp"
		     android:layout_weight="9"
		     android:background="@android:color/black"
		     android:scrollbars="none">
		    <TextView
		        android:id="@+id/tv_dialog_show_msg_result"
		        android:layout_width="match_parent"
		        android:layout_height="fill_parent"
		        android:textColor="@color/white"
		        android:textSize="15sp" />
	  	</ScrollView>
            
		<Button 
			android:id="@+id/btn_dialog_show_msg"
			android:layout_width="250dp"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_marginTop="10dp"
			android:background="@drawable/fillet_select_bg"
			android:textColor="#fff"
			android:textSize="22sp"
			android:text="@string/ok"/>
    </LinearLayout>

</LinearLayout>
