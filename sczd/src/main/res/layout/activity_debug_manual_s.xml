<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_height_52.5"
        android:gravity="center_vertical"
        android:onClick="ToDebugDataAcquisition_sczd"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/debug_data_acquisition"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/debug_data_acquisition"
            android:textSize="@dimen/textsize_19" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/input_area"
            android:contentDescription="@string/about_us"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        style="@style/line_gray_night"
        android:layout_marginLeft="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_height_52.5"
        android:gravity="center_vertical"
        android:onClick="sensibilityTest"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/debug_data_acquisition"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/debug_data_sensibility"
            android:textSize="@dimen/textsize_19" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/input_area"
            android:contentDescription="@string/about_us"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        style="@style/line_gray_night"
        android:layout_marginLeft="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_height_52.5"
        android:gravity="center_vertical"
        android:onClick="TO_DT_MODE_CONF_SCZD"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="4dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/instructions"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/dt_mode_conf"
            android:textSize="@dimen/textsize_19" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/input_area"
            android:contentDescription="@string/about_us"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        style="@style/line_gray_night"
        android:layout_marginLeft="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_height_52.5"
        android:gravity="center_vertical"
        android:onClick="ToSMS_sczd"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/debug_data_acquisition"
            android:gravity="center_vertical"
            android:text="@string/sms_test"
            android:textSize="@dimen/textsize_19" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/input_area"
            android:contentDescription="@string/about_us"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        style="@style/line_gray_night"
        android:layout_marginLeft="40dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="4dp"
        android:layout_height="@dimen/first_height_52.5">

        <CheckBox
            android:id="@+id/cb_debugging"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/checkbox_selector"
            android:button="@null"
            android:checked="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/debug_data_acquisition"
            android:gravity="center_vertical"
            android:text="@string/bluetooth_debug_switch"
            android:textSize="19sp" />

    </RelativeLayout>

    <View
        style="@style/line_gray_night"
        android:layout_marginLeft="40dp"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_height_52.5"
        android:gravity="center_vertical"
        android:onClick="ToRSA"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="4dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/instructions"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/rsa"
            android:textSize="@dimen/textsize_19" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/input_area"
            android:contentDescription="@string/about_us"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        style="@style/line_gray_night"
        android:layout_marginLeft="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_height_52.5"
        android:gravity="center_vertical"
        android:onClick="ToCloseDevice_sczd"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="4dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/exit"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/close_device"
            android:textSize="@dimen/textsize_19" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/input_area"
            android:contentDescription="@string/about_us"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        style="@style/line_gray_night"
        android:layout_marginLeft="40dp" />
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_height_52.5"
        android:gravity="center_vertical"
        android:onClick="To433_module"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/debug_data_acquisition"
            android:gravity="center_vertical"
            android:text="@string/module_433"
            android:textSize="@dimen/textsize_19" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/input_area"
            android:contentDescription="@string/about_us"
            android:gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>