<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/dialog_title"
        android:text="@string/authorization_management" />

    <GridView
        android:id="@+id/gv_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:verticalSpacing="@dimen/margin_10"
        android:background="@drawable/popup_body"
        android:numColumns="4"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_height_52.5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/fillet_select_bg"
        android:text="@string/ok"
        android:textColor="@color/font_color"
        android:textSize="20sp" />
</LinearLayout>
