<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:background="@color/dialog_title_background"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="@string/input_number"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_21" />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@color/input_interface_background"
	    android:padding="20dp"
        >
        <TextView 
            android:id="@+id/tv_target_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
        	android:text="@string/target_phone"
        	android:textColor="@color/light_blue"
        	android:textSize="15sp"
        />
        <AutoCompleteTextView 
            android:id="@+id/et_inputphonenumber"
			android:layout_width="fill_parent"
	    	android:layout_height="36dp"
	    	android:background="@drawable/bg_edittext"     
			android:textColor="#ffffff"
			android:singleLine="true"
			android:textSize="@dimen/textsize_15"
			android:paddingLeft="5dp"
			android:maxLength="20"
			android:inputType="number"
			/>
        <TextView 
            android:id="@+id/tv_target_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
        	android:text="@string/note_name"
        	android:textColor="@color/light_blue"
        	android:paddingTop="20dp"
        	android:textSize="@dimen/textsize_15"
        />
        <EditText 
            android:id="@+id/et_inputname"
			android:layout_width="fill_parent"
	    	android:layout_height="36dip"
	    	android:background="@drawable/bg_edittext"
			android:textColor="@color/white"
			android:singleLine="true"
			android:textSize="@dimen/textsize_15"
			android:paddingLeft="5dp"
			android:maxLength="10"
			android:inputType="text"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9c9a9c"
        android:orientation="horizontal"
        android:padding="3dp"
        >
        <Button 
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="#5a676f"
            android:textSize="@dimen/textsize_15"
            />
        <Button 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ok"
            android:textColor="#5a676f"
            android:textSize="@dimen/textsize_15"
            android:id="@+id/btn_inputok"
            android:enabled="false"
            />
    </LinearLayout>

</LinearLayout>
